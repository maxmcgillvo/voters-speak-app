/* News Source Logo Styles */

.news-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 100%;
    height: 100%;
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
    border-radius: 8px;
}

/* Logos with actual images */
.logo-cnn {
    background-image: url('cnn.png');
    background-color: white;
}

